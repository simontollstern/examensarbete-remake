<%= render 'sidebar' %>

<%= render 'header' %>

<p>Users</p>

<table>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.firstname %> <%= user.lastname %></td>
        <td><%= user.email %></td>
        <% if user.admin? %><td>Admin</td><% else %><td colspan="1"></td><% end %>
        <% if current_user.admin? %>
        <td>
          <%= link_to '',
              user,
              method: :delete,
              data: { confirm: "Do you want to remove '#{user.firstname} #{user.lastname}'?" },
              :class => 'fa fa-close' %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.admin? %><%= link_to 'New User', new_user_path %><br /><% end %>
<%= link_to 'Back', '/' %>

<%= render 'footer' %>
